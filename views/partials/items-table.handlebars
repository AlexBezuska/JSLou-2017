<div class="panel panel-default">
<div class="panel-heading">
  <div class="row">
    <div class="col-xs-6">
      <p class="panel-title"> items ({{#count items}}{{items}}{{/count}})</p>
    </div>
    <div class="col-xs-6">
      <a href="/manage-items" class="btn btn-success pull-right clear-form-btn">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add New item
      </a>
    </div>
  </div>
</div>
<div class="panel-body">
<div class="table-responsive">
  <table class=" table table-striped table-bordered table-condensed">


      {{#each items}}
      <tr>
        <td class="text-center">
          <a href="/delete-item?id={{id}}"
          id="{{id}}" type="button" class="btn btn-default btn-xs delete-item-btn"
          data-dateStart="{{dateStart}}">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          </a>
        </td>
      {{#each this}}
      {{#ifEqual @key "id"}}
      <td class="hidden">{{this}}</td>
      {{else}}
      <td>{{this}}</td>
      {{/ifEqual}}
      {{/each}}
      <td class="text-center">
        <a href="/manage-items?id={{id}}" id="{{id}}" type="button" class="btn btn-default btn-xs">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
      </td>
      </tr>
      {{/each}}


  </table>
</div>
</div>
</div>