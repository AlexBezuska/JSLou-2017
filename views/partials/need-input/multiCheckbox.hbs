{{#ifEqual this.type "file"}}
<div class="alert alert-warning">
  <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> <strong>Warning!</strong> multiCheckbox not supported yet.
</div>
{{/ifEqual}}


