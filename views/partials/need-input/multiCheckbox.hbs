{{#ifEqual this.type "multiCheckbox"}}
{{this.data}}
  {{#each this.templateOptions.options}}
    <div class="checkbox">
      <label>
        <input type="checkbox" name="{{../key}}-{{this.title}}" id="{{this.id}}" value="{{this.id}}"
        {{#ifEqual ../this.data this.id }}
          checked="checked"
        {{else}}
          {{#ifEqual this.templateOptions.placeholder this.id}}
            checked="checked"
          {{/ifEqual}}
        {{/ifEqual}}> {{this.title}}
      </label>
    </div>
  {{/each}}
{{/ifEqual}}



