<div class="panel panel-default">
<div class="panel-heading">
  <div class="row">
    <div class="col-xs-6">
      <p class="panel-title"> Events ({{#count events}}{{events}}{{/count}})</p>
    </div>
    <div class="col-xs-6">
      <a href="/manage-events" class="btn btn-success pull-right clear-form-btn">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add New Event
      </a>
    </div>
  </div>

</div>
<div class="panel-body scroll-box" id="events-table-scoll-box">


<div class="events-table table-responsive">
  <table class=" table table-striped table-bordered table-condensed">
    {{#sortByDate events direction="descending"}}
      {{#each this}}
        <tr data-id="{{id}}">

          <td class="text-center">
            <a href="/delete-event?id={{id}}"
            id="{{id}}" type="button" class="btn btn-default btn-xs delete-event-btn"
            data-dateStart="{{dateStart}}">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>
          </td>

          <td class="event-title">{{title}}</td>

          <td class="event-speaker">
            {{firstName}} {{lastName}}
          </td>

          <td>{{dateStart}}</td>
          <!-- <td>{{timeStart}} on {{dateStart}}</td> -->
          <td class="text-center">
            <a href="/manage-events?id={{id}}" id="{{id}}" type="button" class="btn btn-default btn-xs">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </td>

        </tr>
      {{/each}}
    {{/sortByDate}}
  </table>
</div>


</div>
</div>