<div class="panel panel-default">
  <div class="panel-heading">Events ({{#count events}}{{events}}{{/count}})</div>
  <div class="panel-body">
    <div class="events-table table-responsive">
      <table class=" table table-striped table-bordered table-condensed">
        {{#sortByDate events direction="descending"}}
        {{#each this}}
        <tr>
          <th class="event-title" scope="row">{{title}}</th>
          <td>{{timeStart}} on {{dateStart}}</td>
          <td>{{timeStart}} on {{dateStart}}</td>
          <td>
            <a href="/manage-events?id={{id}}" id="{{id}}" type="button" class="btn btn-default btn-xs">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
          </td>
          <td>
            <a href="/delete-event?id={{id}}" id="{{id}}" type="button" class="btn btn-default btn-xs">
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>
          </td>
        </tr>
        {{/each}}
        {{/sortByDate}}
      </table>
    </div>
  </div>
</div>