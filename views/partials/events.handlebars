<style>
.events-table{
  max-height: 375px;
  overflow-y: scroll;
}
.events-table .event-title{
  max-width: 300px;
  overflow: elipsis;
}
</style>
<div class="events-table table-responsive">
  <table class=" table table-striped table-bordered table-condensed">
    {{#sortByDate events direction="descending"}}
      {{#each this}}
      <tr>
        <th class="event-title" scope="row">{{title}}</th>
        <td>{{date}}</td>
        <td> <button id="{{id}}" type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button></td>
       </tr>
      {{/each}}
    {{/sortByDate}}
  </table>
</div>